#!/bin/csh -f
# +---------------------------------------------------------------+
# |   test_suite for test3                                        |
# +---------------------------------------------------------------+

# Test suite for the tools around the cc_manual.sty for C++ manual writing.
# This part tests in particular the new reference manual style and
# its conversion to HTML with the example given in ../../example/.
# ------------------------------------------------------------------------
# No messages should be visible during the run of the test suite. Any
# message visible indicates an error.

# Test of the manual production
mkdir html
cc_manual_to_html -release "Release 1.6" -date "Date" -cgal_dir . -o html wrapper.tex -quiet
foreach f (html_ori/*.html)
    #echo "comparing $f"
    diff $f html/$f:t
end
foreach f (html_ori/*.gif)
    diff $f html/$f:t
end
rm -r html

exit 0
