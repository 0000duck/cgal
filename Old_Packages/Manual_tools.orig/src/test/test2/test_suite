#!/bin/csh -f
# +---------------------------------------------------------------+
# |   test_suite for test2                                        |
# +---------------------------------------------------------------+

# Test suite for the tools around the cc_manual.sty for C++ manual writing.
# ------------------------------------------------------------------------
# No messages should be visible during the run of the test suite. Any
# message visible indicates an error.

# Test of the extraction
#cc_extract test.tex > test.ex
#diff test.ex test.ori.ex
#rm test.ex

# Test of the manual production
mkdir html
cc_manual_to_html -release "Release 1.6" -date "Date" -cgal_dir . -o html -show_main test.tex -aux test.aux -bbl test.bbl -quiet
foreach f (html_ori/*.html)
   #echo "comparing $f"
    diff $f html/$f:t
end
foreach f (html_ori/*.gif)
    diff $f html/$f:t
end
rm -r html

exit 0
