#! /sw/bin/perl5 

use strict;

$ENV{PATH}="$ENV{PATH}:/sw/bin";
my $subject = shift;
if ($subject eq "-s") {
    $subject = shift;
}
my $recipients = join(' ',@ARGV);
open NOTI, "| '/sw/sbin/sendmail' '-t'";
#open NOTI, "| '/usr/bin/cat'";
print NOTI <<"TOTHIER";
From: geert+cgal-submit\@cs.uu.nl
Subject: $subject
To: $recipients

TOTHIER

while ( <STDIN> ) {
    print NOTI $_;
}
close NOTI;
exit 0;

