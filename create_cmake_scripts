#!/bin/sh

test_comp()
{
  if [ -d $2 ]; then
    cd $2
      for sub in *
      do
        if [ -d $sub ]; then
          cd $sub
            echo "Package $1 has $2 under $sub"
            ../../../Scripts/scripts/cgal_create_cmake_script $3
          cd ..
        fi
      done
    cd ..
  fi
}

for package in *
do

  if [ -d $package ]; then
    cd $package
      test_comp $package 'demo' '-q'
      test_comp $package 'examples' '-d'
      test_comp $package 'test' '-t'
    cd ..
  fi
done



 
 
