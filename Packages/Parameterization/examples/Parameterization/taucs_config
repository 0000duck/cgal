#!/bin/sh
#
# LS 08/2005:
# 	Set TAUCS OS name in $TAUCS_OSTYPE variable for makefile
#	See $OSTYPE computation in $TAUCSROOT/configure

# In most cases OSTYPE is set automatically
TAUCS_OSTYPE=$OSTYPE
# On SGI IRIX systems, OSTYPE is not set (at least in Tel-Aviv University)
if [ \( ${TAUCS_OSTYPE:-fail} = "fail" \) -a \( `uname` = "IRIX64" \) ] ; then
  TAUCS_OSTYPE=irix
fi
# On Linux OSTYPE may be set to "linux-gnu"
if [ ${TAUCS_OSTYPE:-fail} = "linux-gnu" ] ; then
  TAUCS_OSTYPE=linux
fi
# If TAUCS_OSTYPE is still not set, we try to set it from uname
if [ ${TAUCS_OSTYPE:-fail} = "fail" ] ; then
  TAUCS_OSTYPE=`uname | tr "A-Z" "a-z"`
fi

export TAUCS_OSTYPE

