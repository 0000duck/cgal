# This is the makefile for compiling a CGAL application.  
#---------------------------------------------------------------------#
#                    include platform specific settings
#---------------------------------------------------------------------#
# Choose the right include file from the <cgalroot>/make directory.



#CGAL_MAKEFILE = /prisme/CGAL/CGAL-2.1-I-27/make/makefile_i686_CYGWINNT-4.0-20.1_CL.EXE-12.00.8168/
CGAL_MAKEFILE = /prisme/CGAL/CGAL-2.1-I-29/make/makefile_i686_CYGWINNT-4.0-20.1_CL.EXE-12.00.8168
include $(CGAL_MAKEFILE)

#---------------------------------------------------------------------#
#                    compiler flags
#---------------------------------------------------------------------#

CXXFLAGS = \
	-I../../include \
	-I./include \
	$(TESTSUITE_CXXFLAGS) \
	$(CGAL_CXXFLAGS)\
	-g 


#---------------------------------------------------------------------#
#                    linker flags
#---------------------------------------------------------------------#

LDFLAGS = $(TESTSUITE_LDFLAGS) \
          $(CGAL_LDFLAGS)
#	  $(LONG_NAME_PROBLEM_LDFLAGS) \

#---------------------------------------------------------------------#
#                    target entries
#---------------------------------------------------------------------#

all: test_triangulation_geom_traits test_triangulation_tds \
	test_triangulation_2 test_delaunay_triangulation_2 test_constrained_triangulation_2

test_triangulation_geom_traits: test_triangulation_geom_traits.obj
	$(CGAL_CXX) -o test_triangulation_geom_traits test_triangulation_geom_traits.obj $(LDFLAGS)

test_regular_triangulation_2: test_regular_triangulation_2.obj
	$(CGAL_CXX) -o test_regular_triangulation_2 test_regular_triangulation_2.obj $(LDFLAGS)

test_triangulation_tds: test_triangulation_tds.obj
	$(CGAL_CXX) -o test_triangulation_tds test_triangulation_tds.obj $(LDFLAGS)

test_triangulation_2: test_triangulation_2.obj
	$(CGAL_CXX) -o test_triangulation_2 test_triangulation_2.obj $(LDFLAGS)

test_terrain : test_terrain.obj
	$(CGAL_CXX) -o test_terrain  test_terrain.obj $(LDFLAGS)

terr_trian : terr_trian.obj
	$(CGAL_CXX) -o terr_trian  terr_trian.obj $(LDFLAGS)

essai : essai.obj
	$(CGAL_CXX) -o essai  essai.obj $(LDFLAGS)

test_delaunay_triangulation_2: test_delaunay_triangulation_2.obj
	$(CGAL_CXX) -o test_delaunay_triangulation_2 test_delaunay_triangulation_2.obj $(LDFLAGS)

test_constrained_triangulation_2: test_constrained_triangulation_2.obj	
	$(CGAL_CXX) -o test_constrained_triangulation_2 test_constrained_triangulation_2.obj $(LDFLAGS)

clean:
	- rm -f *.obj test_triangulation_geom_traits test_triangulation_2 \
	            test_triangulation_tds test_delaunay_triangulation_2 core \
	            T??.triangulation  file_tds? \
		    test_constrained_triangulation_2 test_regular_triangulation_2

realclean: clean
	- rm -f Program* Error* Compiler* error*

#---------------------------------------------------------------------#
#                    suffix rules
#---------------------------------------------------------------------#

.C.obj:
	$(CGAL_CXX)  $(CXXFLAGS) -c $<
