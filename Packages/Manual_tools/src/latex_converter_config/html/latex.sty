\gdef\thefootnote{0}           %% counter
\gdef{\lciFootnotes}{}         %% collected footnotes

\gdef{\lciFootnoteStack}{}     %% stack for counter and collected footnotes
\newcommand{\lciPushFootnotes}{%
    \lciPushGlobalStack{\lciFootnoteStack}{\thefootnote}%
    \lciPushGlobalStack{\lciFootnoteStack}{\lciFootnotes}%
    \setcounter{footnote}{0}%
    \gdef{\lciFootnotes}{}}
\newcommand{\lciPopFootnotes}{%
    \lciTopGlobalStack{\lciFootnoteStack}{\lciFootnotes}%
    \lciPopGlobalStack{\lciFootnoteStack}%
    \lciTopGlobalStack{\lciFootnoteStack}{\thefootnote}%
    \lciPopGlobalStack{\lciFootnoteStack}}

\newcommand{\footnote}[1]{%
    \addtocounter{footnote}{1}%
    \footnote[\thefootnote]{#1}}
\newcommand{\footnote@om}{%
    \footnotemark[#1]%
    \footnotetext[#1]{#2}}

\newcommand{\footnotemark}{%
    \addtocounter{footnote}{1}%
    \footnotemark[\thefootnote]}
\newcommand{\footnotemark@o}{%
    \lcRawHtml{<A HREF="##Footnote_#XC1"><SUP>#XC1</SUP></A>}}
\newcommand{\footnotetext}[1]{%
    \footnotetext[\thefootnote]{#1}}
\newcommand{\footnotetext@om}{%
    \lciAddFootnote{\lciFootnotes}{#1}{#2}}

%% Args: collected footnotes, footnote number, footnote text
\newcommand{\lciAddFootnote}[3]{%
    \lciIfEqualExpanded{\thefootnote}{0}{
        \gdef{\lciFootnotes}{#X1%
        \lcRawHtml{<A NAME="Footnote_#XC2">&nbsp;<SUP>#XC2</SUP>&nbsp;</A></TD><TD VALIGN=TOP>
}#3
}}%
    {%
        \gdef{\lciFootnotes}{#X1\lcRawHtml{</TD></TR><TR><TD VALIGN=TOP>}
        \lcRawHtml{<A NAME="Footnote_#XC2">&nbsp;<SUP>#XC2</SUP>&nbsp;</A></TD><TD VALIGN=TOP>
}#3
}}}


