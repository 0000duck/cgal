#!/bin/csh -f
# +---------------------------------------------------------------+
# |   test_suite for test1                                        |
# +---------------------------------------------------------------+

# Test suite for the tools around the cc_manual.sty for C++ manual writing.
# ------------------------------------------------------------------------
# No messages should be visible during the run of the test suite. Any
# message visible indicates an error.

# Test of the extraction
cc_extract Point_2.tex > Point_2.ex
diff Point_2.ex Point_2.ori.ex

# Test of the checker
cc_check Point_2.tex -a Point_2.ex
cc_check Point_2.tex -a Point_2.ori.h
rm Point_2.ex

# Test of the manual production
cc_manual_to_html -quiet -release "Release 1.6" -date "Date" -cgal_dir . Point_2.tex
diff CGAL_Point_2.html  CGAL_Point_2.ori.html
diff contents.html      contents.ori.html
diff manual_index.html  manual_index.ori.html
rm CGAL_Point_2.html contents.html manual_index.html 
rm *.gif

exit 0

