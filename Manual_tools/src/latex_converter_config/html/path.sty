\newcommand{\lciLocalPath}[1]{%
    \lcRawHtml{<A HREF="#C1">}{\tt\lciRawOutputN{#L1}#1}\lcRawHtml{</A>}}
\newcommand{\path}{\lciParseUntilDelimiter{\lciLocalPath}}

\newcommand{\lciNonLinkedLocalPath}[1]{%
    {\tt\lciRawOutputN{#L1}#1}}
\newcommand{\nonlinkedpath}{\lciParseUntilDelimiter{\lciNonLinkedLocalPath}}

% emulate \url from url.sty and hyperref.sty
\newcommand{\url}{\lciParseUntilCloseBrace{\lciLocalPath}}

