include $(CGAL_MAKEFILE)


#---------------------------------------------------------------------#
#                    compiler flags
#---------------------------------------------------------------------#

CXXFLAGS = \
	-I./include \
	-I../../include \
	$(TESTSUITE_CXXFLAGS) \
	$(CGAL_CXXFLAGS) \
	-pedantic \
	-DCGAL_NO_ASSERTIONS \
	-DCGAL_NO_PRECONDITIONS \
	-DCGAL_NO_POSTCONDITIONS \

#	-DCGAL_NO_DEPRECATED_CODE

#	-g \
#	-pedantic \
