#
# Usage
# ------
usage ()
{
echo "\
Search for the first file/folder existing in a list. Print an empty string on failure.
Usage: $0 file1 file2..."

exit 1
}

#
# Test arguments
# --------------
if [ ! "$1" ]					# If no argument
then
	usage
fi

for arg in $*                			# Parse arguments
do
	case "$arg" in
	-*) 	usage				# if unknown option
		;;
	* ) 					# ok if file/folder name
		;;
	esac
done

#
# Test each file
# ---------------------
for file in $*
do
	if [ -e "$file" ]
	then
		echo "$file"
		exit 0
	fi
done

#
# Print an empty string on failure
#-----------------------------------
echo ""
exit 1

